<Page x:Class="Shoes.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage" FontFamily="Times New Roman">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0"  VerticalAlignment="Center">
            <TextBlock Text="Наименование: " Margin="5" FontSize="20" Grid.Column="0"></TextBlock>
            <TextBox Text="{Binding ProductName}" Width="200" Height="25" Margin="5" FontSize="20" Grid.Column="1"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1"  VerticalAlignment="Center">
            <TextBlock Text="Категория: " Margin="5" FontSize="20" Grid.Column="0"></TextBlock>
            <ComboBox Name="ComboCategory" Width="200" Height="25" Grid.Column="1"
                      SelectionChanged="ComboCategory_SelectionChanged" FontSize="20" Margin="5">
                <!--<TextBlock>Женская обувь</TextBlock>
                <TextBlock>Мужская обувь</TextBlock>-->
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2"  VerticalAlignment="Center">
            <TextBlock Text="Описание: " Margin="5" FontSize="20" Grid.Column="0"></TextBlock>
            <TextBox Text="{Binding ProductDescription}" Width="350" Height="25" Margin="5" FontSize="20" Grid.Column="1"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3"  VerticalAlignment="Center">
            <TextBlock Text="Производитель: " Margin="5" FontSize="20"></TextBlock>
            <ComboBox Name="ComboManufacturer" Width="200" Height="25" Margin="5"
                      SelectionChanged="ComboManufacturer_SelectionChanged" FontSize="20">
                <!--<TextBlock>Rieker</TextBlock>
                <TextBlock>Alissio Nesca</TextBlock>
                <TextBlock>Kari</TextBlock>
                <TextBlock>Marco Tozzi</TextBlock>
                <TextBlock>CROSBY</TextBlock>-->
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4"  VerticalAlignment="Center">
            <TextBlock Text="Поставщик: " Margin="5" FontSize="20"></TextBlock>
            <TextBox Text="{Binding ProductImporter}" Width="200" Height="25" Margin="5" FontSize="20"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="5"  VerticalAlignment="Center">
            <TextBlock Text="Цена: " Margin="5" FontSize="20"></TextBlock>
            <TextBox Text="{Binding PriductCost}" Width="200" Height="25" Margin="5" FontSize="20"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="6" VerticalAlignment="Center">
            <TextBlock Text="Единица измерения: " Margin="5" FontSize="20"></TextBlock>
            <TextBox Text="{Binding ProductUnit}" Width="200" Height="25" Margin="5" FontSize="20"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="7"  VerticalAlignment="Center">
            <TextBlock Text="Кол-во на складе: " Margin="5" FontSize="20"></TextBlock>
            <TextBox Text="{Binding ProductQuantityInStock}" Width="200" Height="25" Margin="5" FontSize="20"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="8"  VerticalAlignment="Center">
            <TextBlock Text="Действующая скидка: " Margin="5" FontSize="20"></TextBlock>
            <TextBox Text="{Binding ProductDiscount}" Width="200" Height="25" Margin="5" FontSize="20"></TextBox>
        </StackPanel>

        <Button Name="SaveBtn" Content="Сохранить" HorizontalAlignment="Center" Click="SaveBtn_Click" 
                Grid.Row="9"></Button>

    </Grid>
</Page>
