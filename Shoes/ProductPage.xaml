<Page x:Class="Shoes.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage" FontFamily="Times New Roman">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <!--<RowDefinition Height="50"></RowDefinition>-->
        </Grid.RowDefinitions>

        <WrapPanel Name="Wrp" Orientation="Vertical" HorizontalAlignment="Right" Grid.Row="0" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Вы авторизованы как " FontSize="16"></TextBlock>
                <TextBox Name="FIOTB" FontSize="16" ></TextBox>
            </StackPanel>
            <!--<StackPanel Orientation="Horizontal">
                <TextBlock Text="Роль: " FontSize="16"></TextBlock>
                <TextBox Name="RoleTB" FontSize="16"></TextBox> 
            </StackPanel>-->

        </WrapPanel>
        
        <WrapPanel Name="WrpNoClient" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Введите наименование для поиска: "
                           Width="350" FontSize="20"></TextBlock>
                <TextBox Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged" 
                         Width="300" FontSize="15"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Выберите поставщика "
                           Width="250" FontSize="20"></TextBlock>
                <ComboBox Name="ComboType" SelectionChanged="ComboType_SelectionChanged" 
                          FontSize="15" Width="200" >
                    <TextBlock>Все проставщики</TextBlock>
                    <TextBlock>Kari</TextBlock>
                    <TextBlock>Обувь для вас</TextBlock>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5" >
                <RadioButton Name="RBtnUp" Content="По возрастанию кол-ва на складе"
                             FontSize="16" Width="250" Checked="RBtnUp_Checked"></RadioButton>
                <RadioButton Name="RBtnDown" Content="По убыванию кол-ва на складе"
                             FontSize="16" Width="250" Checked="RBtnDown_Checked" ></RadioButton>
            </StackPanel>
            
        </WrapPanel>
        
        <ListView Name="ProductListView" Grid.Row="2">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ProductDiscount}" Value="0">
                            <Setter Property="Background" Value="White"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ProductDiscount}" Value="15">
                            <Setter Property="Background" Value="#2E8B57"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ProductQuantityInStock}" Value="0">
                            <Setter Property="Background" Value="LightBlue"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>


            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Image Width="250" Grid.Column="0" Height="200" HorizontalAlignment="Center" Grid.RowSpan="7">
                            <Image.Source>
                                <Binding Path="ProductPhoto">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="{Binding ProductCategory}" FontSize="20"></TextBlock>
                            <TextBlock Text=" | " FontSize="20"></TextBlock>
                            <TextBlock Text="{Binding ProductName}" FontSize="20"></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Описание товара: " FontSize="16" ></TextBlock>
                            <TextBlock Text="{Binding ProductDescription}" FontSize="16" ></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="Производитель: " FontSize="16"></TextBlock>
                            <TextBlock Text="{Binding ProductManufacturer}" FontSize="16"></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="3" Grid.Column="1">
                            <TextBlock Text="Поставщик: " FontSize="16"></TextBlock>
                            <TextBlock Text="{Binding ProductImporter}" FontSize="16"></TextBlock>
                        </StackPanel>

                        <!--<StackPanel Orientation="Horizontal" Margin="5" Grid.Row="4" Grid.Column="1">
                            <TextBlock Text="Цена: " FontSize="16" ></TextBlock>
                            <TextBlock Text="{Binding PriductCost}" FontSize="16"></TextBlock>
                        </StackPanel>-->
                        <!-- Цена -->
                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="4" Grid.Column="1">
                            <TextBlock Text="Цена: " FontSize="16"/>

                            <!-- Старая цена, перечеркнутая -->
                            <TextBlock Text="{Binding PriductCost, StringFormat={}{0} руб.}"
                                       FontSize="16" Foreground="Red" 
                                       TextDecorations="Strikethrough"
                                       Visibility="{Binding PriductDiscount, Converter={StaticResource DiscountVisibilityConverter}}"/>

                            <!-- Новая цена -->
                            <TextBlock Text="{Binding DiscountedPrice, StringFormat={}{0} руб.}"
                                       FontSize="16" Foreground="Black" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="5" Grid.Column="1">
                            <TextBlock Text="Единица измерения: " FontSize="16" ></TextBlock>
                            <TextBlock Text="{Binding ProductUnit}" FontSize="16"></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="6" Grid.Column="1">
                            <TextBlock Text="Количество на складе: " FontSize="16"></TextBlock>
                            <TextBlock Text="{Binding ProductQuantityInStock}" FontSize="16"></TextBlock>
                        </StackPanel>

                        <TextBlock Text="{Binding ProductDiscount, StringFormat={}{0}%}" FontSize="20" Grid.Column="2" Grid.RowSpan="7" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

                        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.RowSpan="4" Grid.Column="2" HorizontalAlignment="Center">
                            <Button Name="EditBtn" Content="Редактировать" Click="EditBtn_Click"></Button>
                            <Button Name="DelBtn" Content="Удалить" Click="DelBtn_Click"></Button>
                        </StackPanel>
                        
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Name="BntAdd" Content="Добавить" Click="BntAdd_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom"></Button>
        
    </Grid>
</Page>
